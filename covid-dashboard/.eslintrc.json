{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": ["error", "windows"]
    },
    "plugins": [
        "babel"
    ],
    "parser": "babel-eslint",
    "overrides": [
        {
            "files": [
                "*.js"
            ],
            "rules": {
                "no-plusplus": 0
            }
        }
    ]
}